<window id="window" controller="script" script="%skin/ui.js" height="1000" width="1000" flow="column" background="#142D3B">
  <editor/>

  <image multiply="#3E4556" absolute="true" x="0" y="0" width="100%" height="16px" flow="row">
    <image src="%skin/mainmenu.png" id="startbutton" slice="15 15 1 1" width="150px" height="100%" absolute="true" x="100%-150px" padding="16">
      <span text="Main Menu"/>
    </image>
  </image>

  <node id="filemenu" x="0" y="0" width="100%" height="100%" absolute="true" visible="false">
    <image multiply="#576D70" height="100%-16px" width="150px" x="100%-150px" y="16px" absolute="true" id="filemenucontainer">

      <menubutton id="newbutton" label="New"/>
      <menubutton id="openbutton" label="Open"/>
      <menubutton id="savebutton" label="Save"/>
      <menubutton id="saveAsbutton" label="Save As..."/>
      <menubutton id="exportbutton" label="Export..."/>
      <menubutton id="quitbutton" label="Quit"/>
      <node height="100%"/>

      <node height="94px" padding="0 30 0 0">
        <image src="%appdata/icon.png" y="0" x="50%-32px" width="64px" height="64px" fit="cover" absolute="true"/>
      </node>

      <span id="greeting" height="26px">Hello, ${username}!</span>
    </image>
  </node>

  <node controller="focusfront,toolbox" id="toolbox" absolute="true" height="260px" width="36px" x="0" y="50%-100px" flow="column"/>

</window>
